@using System.Web
@{
    string baslik = "<h1> HttpUtility Kullanımı </h1>";
    string baslikHtmlEncode = HttpUtility.HtmlEncode(baslik);// baslik değişkeni içerisinde karakterleri kodla 
    string baslikHtmlDecode = HttpUtility.HtmlDecode(baslikHtmlEncode);
}
<h1>Http Utility Kullanımı</h1>
<p>HttpUtility ile Karakter Kodlaması ve bu kodlamanın çözülmesi işlemleri yapılabilir</p>
<h3>Başlık : @baslik</h3>
<h3>Başlığın HtmlEncode edilmesi: @baslikHtmlEncode</h3>
<h3>Başlığın HtmlDecode Hali: @baslikHtmlDecode</h3>